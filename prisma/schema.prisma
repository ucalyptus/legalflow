generator client {
  provider        = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Case {
  id          String     @id @default(uuid())
  title       String
  clientName  String
  status      CaseStatus @default(PENDING)
  nextHearing DateTime?
  updatedAt   DateTime   @updatedAt
  priority    Priority   @default(MEDIUM)
  caseType    String
  assignedTo  String[]
  filingDate  DateTime   @default(now())
  documents   Document[]
  createdAt   DateTime   @default(now())
}

model Document {
  id        String   @id @default(cuid())
  title     String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags      String[]
  status    String   @default("active")
  case      Case?    @relation(fields: [caseId], references: [id])
  caseId    String?
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum CaseStatus {
  ONGOING
  SETTLED
  UNDER_REVIEW
  PENDING
}

enum Priority {
  HIGH
  MEDIUM
  LOW
}

enum DocStatus {
  DRAFT
  SUBMITTED
  UNDER_REVIEW
  APPROVED
}
